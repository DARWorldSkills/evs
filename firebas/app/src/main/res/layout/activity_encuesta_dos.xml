<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo"
    android:layout_height="match_parent"
    tools:context=".controllers.EncuestaDos">

    <Button
        android:id="@+id/btnSiguiente3"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="53dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/icosiguiente"
        android:onClick="siguientetres"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="236dp"
        android:layout_height="132dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:cropToPadding="true"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/medicamentos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/amiko"
        android:text="TOMA MEDICAMENTOS PARA LA HIPERTENSION?"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="193dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/siMedi"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/amiko"
            android:text="Si"
            android:textColor="#000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/noMedi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/amiko"
            android:text="No"
            android:textColor="#000"
            android:textSize="12sp" />

    </RadioGroup>

    <ImageView

        android:id="@+id/imageView11"
        android:layout_width="236dp"
        android:layout_height="132dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/border"
        android:cropToPadding="true"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pregunta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amiko"
        android:text="¿LE HAN ENCONTRADO ALGUNA VEZ VALORES DE GLUCOSA ALTOS (EJ. EN UN CONTROL MÉDICO, DURANTE UNA ENFERMEDAD, DURANTE EL EMBARAZO)"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <RadioGroup

        android:id="@+id/radioGroup"
        android:layout_width="193dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/siGlucosa"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/amiko"
            android:text="Si"
            android:textColor="#000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/noGlucosa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/amiko"
            android:text="No"
            android:textColor="#000"
            android:textSize="12sp" />

    </RadioGroup>

    <TextView

        android:id="@+id/textView5"
        android:layout_width="315dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amiko"
        android:text="¿SE LE HA DIAGNOSTICADO DIABETES A ALGUNO DE SUS FAMILIARES?"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup

        android:id="@+id/radioGroup3"
        android:layout_width="306dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/Diabetes"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/amiko"
            android:text="Si padres,hermanos o hijos"
            android:textColor="#000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/noDiabetes"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/amiko"
            android:text="No"
            android:textColor="#000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/noabuelos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/amiko"
            android:text="Si como abuelos,tía, tío, primo hermano"
            android:textColor="#000"
            android:textSize="12sp" />

    </RadioGroup>





</android.support.constraint.ConstraintLayout>